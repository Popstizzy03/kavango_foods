---
import "../styles/global.css";
import logo from '../assets/akava.png';
import { Image } from 'astro:assets'; 

const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: "Menu",
    links: [
      { name: "Sausages", url: "/menu#sausages" },
      { name: "Wraps", url: "/menu#wraps" },
      { name: "Samosas", url: "/menu#samosas" },
      { name: "Combo Meals", url: "/menu#combos" }
    ]
  },
  {
    title: "About",
    links: [
      { name: "Our Story", url: "/about#story" },
      { name: "Locations", url: "/about#locations" },
      { name: "Careers", url: "/about#careers" },
      { name: "Contact Us", url: "/contact" }
    ]
  },
  {
    title: "Support",
    links: [
      { name: "FAQs", url: "/faq" },
      { name: "Delivery Info", url: "/delivery" },
      { name: "Terms & Conditions", url: "/terms" },
      { name: "Privacy Policy", url: "/privacy" }
    ]
  }
];

const contactInfo = {
  phone: "0977 600 808",
  altPhone: "0973 900 496",
  altPhone2: "0973 905 340",
  email: "info@okavango.com",
  address: "123 Food Street, Lusaka, Zambia"
};

const socialLinks = [
  { name: "Facebook", url: "https://facebook.com", icon: "facebook" },
  { name: "Instagram", url: "https://instagram.com", icon: "instagram" },
  { name: "Twitter", url: "https://twitter.com", icon: "twitter" }
];
---

<footer class="bg-gray-900 text-white pt-16 pb-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
      <div>
        <div class="flex items-center gap-2 mb-4">
          <Image src={logo} alt="Okavango Foods Logo" width="40" height="40" />
          <span class="text-xl font-bold">Okavango <span class="text-green-400">Foods</span></span>
        </div>
        <p class="text-gray-400 mb-6">
          Delicious food you can enjoy, made with quality ingredients and authentic recipes.
        </p>
        <div class="flex gap-4">
          {socialLinks.map(social => (
            <a 
              href={social.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center hover:bg-primary transition-colors"
              aria-label={social.name}
            >
              {social.icon === "facebook" && (
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                </svg>
              )}
              {social.icon === "instagram" && (
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                </svg>
              )}
              {social.icon === "twitter" && (
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
      
      {footerLinks.map(column => (
        <div>
          <h3 class="text-lg font-semibold mb-4">{column.title}</h3>
          <ul class="space-y-2">
            {column.links.map(link => (
              <li>
                <a href={link.url} class="text-gray-400 hover:text-white transition-colors">
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
      
      <div>
        <h3 class="text-lg font-semibold mb-4">Contact Us</h3>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
            </svg>
            <div>
              <p class="text-gray-400">{contactInfo.phone}</p>
              <p class="text-gray-400">{contactInfo.altPhone}</p>
              <p class="text-gray-400">{contactInfo.altPhone2}</p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
            </svg>
            <p class="text-gray-400">{contactInfo.email}</p>
          </li>
          <li class="flex items-start gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            <p class="text-gray-400">{contactInfo.address}</p>
          </li>
        </ul>
      </div>
    </div>
    
    <div class="border-t border-gray-800 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-500 text-sm mb-4 md:mb-0">
          &copy; {currentYear} Okavango Foods. All rights reserved.
        </p>
        <div class="flex gap-4">
          <a href="/terms" class="text-gray-500 text-sm hover:text-white transition-colors">Terms & Conditions</a>
          <a href="/privacy" class="text-gray-500 text-sm hover:text-white transition-colors">Privacy Policy</a>
        </div>
      </div>
    </div>
  </div>
</footer>